#! /bin/bash
#
# filter enhanced.log with peco and stdout

err(){
    echo "[$(date +'%Y-%m-%dT%H:%M:%S%z')]: $@" >&2
}

hist=$HOME/.enhancd/enhancd.log

if [ ! -e $hist ]
then
    err "does NOT exists $hist"
    exit 1
fi

if ! type peco >/dev/null 2>&1
then
    err 'must install peco. PLZ $brew install peco'
fi

less $hist | peco
