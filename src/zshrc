# ls
if [ -x "`which colorls`" ]; then
    export RUBYOPT=-W0
    alias ls="colorls -l -a --sd"
    alias l="colorls -l -a --sd"
else
    alias ls="ls -GF"
    alias l='ls -lah'
    alias la='ls -lAh'
fi

